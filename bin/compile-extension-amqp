#!/bin/bash
set -o xtrace
source $(dirname $0)/compile-extensions-common

sudo apt-get install -y librabbitmq-dev

git clone git://github.com/alanxz/rabbitmq-c.git
pushd rabbitmq-c
git submodule init
git submodule update
autoreconf -i && ./configure --prefix $INSTALL_DEST/$VERSION && make && sudo make install

popd

git clone https://github.com/pdezwart/php-amqp.git
pushd php-amqp
if [[ ! $VERSION =~ ^7 ]]; then
	git checkout v1.6.1
fi

phpize
./configure && make && make install
popd

true
